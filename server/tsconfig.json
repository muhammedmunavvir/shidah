{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "express", "multer"],       
    "resolveJsonModule": true                     
  },
  "include": [
    "src",
    "types",                                      
    "server.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
