{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",              // ✅ match with moduleResolution
    "moduleResolution": "NodeNext",    // ✅
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "src/**/*.ts"]
}
